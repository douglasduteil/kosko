{
  "name": "@kosko/monorepo",
  "version": "0.0.1",
  "private": true,
  "homepage": "https://kosko.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/tommy351/kosko.git"
  },
  "author": "Tommy Chen <tommy351@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "npm-run-all lint:*",
    "lint:eslint": "eslint . --ext .js,.ts,.jsx,.tsx,.cjs.,mjs",
    "lint:syncpack": "syncpack list-mismatches",
    "build": "npm-run-all build:*",
    "build:ts": "tsc-multi",
    "build:deno": "deno-build packages/*/tsconfig.json",
    "clean": "rm -rf packages/*/dist && npm run build:ts -- --clean",
    "watch": "npm run build:ts -- --watch",
    "test": "npm-run-all test:*",
    "test:unit": "cross-env ESM_IMPORT_DISABLED=true jest",
    "test:integration": "jest --config integration/jest.config.js",
    "test:browser": "jest --config integration/browser/jest.config.js",
    "preinstall": "npx only-allow pnpm"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,.cjs,.mjs}": "eslint --fix"
  },
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.3.0",
    "@changesets/cli": "^2.14.1",
    "@kosko/deno-build": "workspace:*",
    "@tsconfig/node10": "^1.0.7",
    "@types/expect-puppeteer": "^4.4.5",
    "@types/fs-extra": "^9.0.10",
    "@types/jest": "^26.0.20",
    "@types/jest-environment-puppeteer": "^4.4.1",
    "@types/node": "^14.14.20",
    "@types/puppeteer": "^5.4.3",
    "@types/tmp": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "execa": "^5.0.0",
    "expect-puppeteer": "^4.4.0",
    "fs-extra": "^9.1.0",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "jest-puppeteer": "^4.4.0",
    "jest-serializer-path": "^0.1.15",
    "kubernetes-models": "^1.5.2",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "pkg-dir": "^5.0.0",
    "prettier": "^2.2.1",
    "puppeteer": "^8.0.0",
    "syncpack": "^5.7.11",
    "temp-dir": "^2.0.0",
    "tmp-promise": "^3.0.2",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "tsc-multi": "^0.5.0",
    "typescript": "^4.2.4",
    "webpack": "^5.31.2",
    "webpack-cli": "^4.6.0"
  },
  "syncpack": {
    "peer": false,
    "source": [
      "package.json",
      "packages/*/package.json",
      "internal/*/package.json"
    ]
  }
}
